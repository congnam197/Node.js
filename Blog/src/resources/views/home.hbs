<div class="mt-4 mb-4">
 
      {{#if success_messages }}
      <div id="message">{{success_messages}}</div>
      {{/if}}  
      {{#if error_messages }}
      <div id="error">{{error_messages}}</div>
      {{/if}} 
    <div class="row">
    <p>
      <strong>368.232+</strong>
      người khác đã học
    </p>
    <h3>Khóa học miễn phí</h3>
  </div>
  <div class="row">
    {{#each courses}}
      <div class="col-sm-4 col-lg 6 mt-4">
        <div class="card">
          <a href="/courses/{{this.slug}}">
            <img
              src="{{this.image}}"
              class="card-img-top"
              alt="{{this.image}}"
            />
          </a>
          <div class="card-body">
            <a href="/courses/{{this.slug}}">
              <h5 class="card-title">{{this.name}}</h5>
            </a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  var error = document.getElementById('error').textContent;
  if(error !=""){ 
   Swal.fire({
  title: "Oops ...",
  text: error,
  icon: "error",
  timer:3000,
  showConfirmButton: false,
  })
  } 

  var message = document.getElementById('message').textContent;
  if(message !=""){ 
    Swal.fire({
      text:message,
      icon:"success",
      timer:2000,
      showConfirmButton :false
    }) 
  }

</script>