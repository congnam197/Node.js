<form action="/user/update/{{user._id}}?_method=PUT" method="POST">
  <section class="gradient-custom-2 mt-4">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col col-lg-9 col-xl-7">
        <div class="card" style="width:100%">
          <div
            class="rounded-top text-white d-flex flex-row"
            style="background-color: #000; height:200px;"
          >
            <div class="ms-4 mt-5 d-flex flex-column">
              <img
                src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-profiles/avatar-1.webp"
                alt="Generic placeholder image"
                {{!-- class="img-fluid img-thumbnail mt-4 mb-2" --}}
                style="width: 150px; z-index: 1"
              />
            <input type = "file" name="avatar" style="z-index: 999">
            
            </div>
            <div class="ms-3" style="margin-top: 130px;">
              <input type="text" name="name" value={{user.name}}></input>
              <p>New York</p>
            </div>
          </div>
          <div class="p-4 text-black" style="background-color: #f8f9fa;">
            <div class="d-flex justify-content-end text-center py-1">
              <div>
                <p class="mb-1 h5">253</p>
                <p class="small text-muted mb-0">Bài viết</p>
              </div>
              <div class="px-3">
                <p class="mb-1 h5">10</p>
                <p class="small text-muted mb-0">Khóa đã học</p>
              </div>
              <div>
                <p class="mb-1 h5">478</p>
                <p class="small text-muted mb-0">Yêu thích</p>
              </div>
            </div>
          </div>
          <div class="card-body p-4 text-black">
            <div class="mb-5">
              <p class="lead fw-normal mb-1">Thông tin</p>
              <div class="p-4" style="background-color: #f8f9fa;">
                <p class="font-italic mb-1">Web Developer</p>
                <p class="font-italic mb-1">{{user.email}}</p>
                <p class="font-italic mb-0"></p>
              </div>
            </div>
          </div>
          <button
            data-mdb-ripple-color="dark"
            style="z-index: 1;"
            type="submit"
            class="btn btn-outline-dark"
          >
            Chỉnh sửa
          </button>
        </div>
      </div>
    </div>
  </section>
</form>